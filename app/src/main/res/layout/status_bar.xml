<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/status_bar_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/status_bar_play"
        android:layout_alignBottom="@+id/status_bar_play"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/status_bar_play"
        android:src="@drawable/previous_button"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/status_bar_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/status_bar_next"
        android:layout_alignBottom="@+id/status_bar_next"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/status_bar_next"
        android:src="@drawable/play_button"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/status_bar_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="139dp"
        android:src="@drawable/next_button"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/status_bar_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/black" />

    <TextView
        android:id="@+id/status_bar_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="5"
        android:text="test song" />

</RelativeLayout>